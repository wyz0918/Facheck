<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_class_layout_height"
        android:layout_marginTop="@dimen/default_tiny_padding"
        android:paddingStart="@dimen/default_grow_margin"
        android:paddingEnd="@dimen/default_general_margin"
        android:paddingTop="@dimen/default_general_margin"
        android:paddingBottom="@dimen/default_general_margin"
        android:background="@drawable/bg_border"
        >

        <TextView
            android:id="@+id/class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="@color/black_80"
            android:textSize="@dimen/default_big_large_text_size" />

        <TextView
            android:id="@+id/class_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black_80"
            android:textSize="@dimen/default_medium_text_size" />

        <Button
            android:id="@+id/item_btn_rollcall"
            android:layout_width="@dimen/home_class_btn_width"
            android:layout_height="@dimen/home_class_btn_height"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_rollcall_green"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/default_medium_text_size"
            android:visibility="visible" />



    </RelativeLayout>


</LinearLayout>


