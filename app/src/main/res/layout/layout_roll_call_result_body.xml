<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/roll_call_result_height"
    android:background="@drawable/bg_border"
    android:elevation="@dimen/card_elevation"
    android:foreground="?attr/selectableItemBackground"
    android:id="@+id/roll_call_result_body">


    <TextView
        android:id="@+id/student_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/default_grow_margin"
        android:maxLines="1"
        android:textColor="@color/black_80"
        android:textSize="@dimen/default_medium_text_size" />

    <TextView
        android:id="@+id/student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/default_grow_margin"
        android:layout_toEndOf="@id/student_id"
        android:maxLines="1"
        android:textColor="@color/media_controller_bg"
        android:textSize="@dimen/default_medium_text_size" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/default_grow_margin"
        android:src="@drawable/ic_gray_arrow_right" />


</RelativeLayout>