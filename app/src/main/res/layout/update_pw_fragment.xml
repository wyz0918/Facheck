<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appNs="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/navigation_background_light"
    android:layout_height="match_parent">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_oldpass"
        android:layout_width="match_parent"
        appNs:passwordToggleEnabled="true"
        android:layout_marginTop="22dp"
        appNs:hintTextAppearance="@style/customHintStyle"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="42sp"
            android:background="@drawable/layer_list_draw"
            android:textSize="18sp"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyz"
            android:inputType="textPassword"
            android:textColor="#CDCDC1"
            android:maxLength="15"
            android:layout_marginHorizontal="25dp"
            android:hint="  旧密码"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_new_pass"
        android:layout_width="match_parent"
        appNs:passwordToggleEnabled="true"
        android:layout_marginTop="5dp"
        appNs:hintTextAppearance="@style/customHintStyle"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/new_pass"
            android:layout_width="match_parent"
            android:layout_height="42sp"
            android:background="@drawable/layer_list_draw"
            android:textSize="18sp"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyz"
            android:inputType="textPassword"
            android:textColor="#CDCDC1"
            android:maxLength="15"
            android:layout_marginHorizontal="25dp"
            android:hint="  新密码(最少6位)"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_new_pass1"
        android:layout_width="match_parent"
        appNs:passwordToggleEnabled="true"
        android:layout_marginTop="5dp"
        appNs:hintTextAppearance="@style/customHintStyle"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/new_pass1"
            android:layout_width="match_parent"
            android:layout_height="42sp"
            android:background="@drawable/layer_list_draw"
            android:textSize="18sp"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyz"
            android:inputType="textPassword"
            android:textColor="#CDCDC1"
            android:maxLength="15"
            android:layout_marginHorizontal="25dp"
            android:hint="  确认新密码"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/OK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:text="完       成"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="26dp"
        android:textSize="17sp"
        android:textColor="#FFFFFF"/>
</LinearLayout>